# Hang.fm Bot Configuration Example
# Copy this to hang-fm-config.env and fill in your values

# ========================================
# REQUIRED - Bot Authentication
# ========================================
# Get these from hang.fm after creating a bot account
BOT_USER_TOKEN=your_bot_jwt_token_here
COMETCHAT_AUTH=your_cometchat_auth_token_here
COMETCHAT_API_KEY=193427bb5702bab7
USER_ID=your_user_uuid_here
ROOM_ID=your_room_uuid_here

# ========================================
# Bot Settings
# ========================================
BOT_NAME=BOT
DEBUG=true
VERBOSE_MODE=false
BOT_AVATAR=bot-01
CHAT_AVATAR_ID=bot-01
CONTENT_FILTER_ENABLED=true

# Connection Settings
WEBSOCKET_URL=wss://hang.fm/socket.io/websocket
API_BASE_URL=https://hang.fm/api

# Greetings
AUTO_JOIN_ROOM=true
SEND_HEARTBEAT=true
HEARTBEAT_INTERVAL=30000
BOOT_GREET=true
BOOT_GREET_MESSAGE=BOT Online ðŸ¦¾ðŸ¤–
USER_GREET=true
USER_GREET_MESSAGE=Welcome {name}!

# ========================================
# AI Providers (At least one required)
# ========================================
# Current AI provider: openai, gemini, huggingface, or auto
AI_PROVIDER=gemini

# OpenAI
OPENAI_API_KEY=sk-proj-your_openai_key_here
OPENAI_ENABLED=true
OPENAI_MODEL=gpt-4o-mini

# Google Gemini (Recommended - free tier available)
GEMINI_API_KEY=your_gemini_key_here
GEMINI_ENABLED=true
GEMINI_MODEL=gemini-2.0-flash-exp

# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_key_here
HUGGINGFACE_ENABLED=true
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct
HUGGINGFACE_FALLBACK_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# ========================================
# Optional APIs
# ========================================
# OpenWeather API (for /weather command)
OPENWEATHER_API_KEY=your_openweather_key_here
WEATHER_LOCATION=New York,NY,US

# Spotify API (for music metadata)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_ENABLED=true

# Discogs API (for underground music metadata)
DISCOGS_TOKEN=your_discogs_token_here
DISCOGS_ENABLED=true

# Tenor GIF API (for /tenor command)
TENOR_API_KEY=your_tenor_api_key_here

# Wikipedia OAuth (for better API rate limits)
WIKIPEDIA_CLIENT_ID=your_wikipedia_client_id_here
WIKIPEDIA_CLIENT_SECRET=your_wikipedia_client_secret_here
WIKIPEDIA_ACCESS_TOKEN=your_wikipedia_access_token_here

# ========================================
# Bot Behavior
# ========================================
BOT_PERSONALITY=sassy
ENABLE_PROFANITY=true
RESPONSE_LENGTH_LIMIT=200
KEYWORD_TRIGGERS=bot,b0t,@bot
ENABLE_CONVERSATION_MEMORY=true
USER_MEMORY_DURATION=86400

# DJ Settings
DJ_ENABLED=true
AUTO_UPVOTE=true
DJ_QUEUE_LIMIT=10

# Bot Detection (exclude from stats)
EXCLUDE_BOT_NAMES=bot,bot2,hangbot,musicbot
EXCLUDE_USERIDS=

# Research APIs
MUSICBRAINZ_USER_AGENT=HangBot/1.0
WIKIPEDIA_USER_AGENT=HangBot/1.0

