# Deepcut.live Bot Configuration Example
# Copy this to config.env and fill in your values

# ========================================
# REQUIRED - Bot Authentication
# ========================================
# Get these from deepcut.live after creating a bot account
AUTH=your_deepcut_auth_token_here
USERID=your_user_id_here
ROOMID=your_room_id_here

# ========================================
# Permissions (User IDs)
# ========================================
# Owner has full control
OWNER_USERIDS=your_owner_userid_here

# Admins can use most commands
ADMIN_USERIDS=admin_userid_here,another_admin_userid

# Moderators have limited access
MOD_USERIDS=mod_userid_here

# ========================================
# AI Provider Configuration
# ========================================
# Current provider: openai, gemini, huggingface, or auto
AI_PROVIDER=huggingface
AI_TOGGLE_ENABLED=true

# OpenAI
OPENAI_API_KEY=sk-proj-your_openai_key_here
OPENAI_ENABLED=false
OPENAI_MODEL=gpt-4o-mini

# Google Gemini (Recommended - free tier available)
GEMINI_API_KEY=your_gemini_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# HuggingFace (Free!)
HUGGINGFACE_API_KEY=your_huggingface_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct
HUGGINGFACE_FALLBACK_MODEL=microsoft/Phi-3-mini-4k-instruct

# ========================================
# Music Metadata APIs (Optional)
# ========================================
# Discogs (for underground music info)
DISCOGS_TOKEN=your_discogs_token_here
DISCOGS_ENABLED=true

# Spotify (for mainstream music info)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_ENABLED=true

# Wikipedia (for artist bios and album info)
WIKIPEDIA_ACCESS_TOKEN=your_wikipedia_oauth_token_here

# YouTube (for restriction checking)
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenWeather (for weather commands)
OPENWEATHER_API_KEY=your_openweather_key_here
WEATHER_LOCATION=New York,NY,US

# ========================================
# Bot Settings
# ========================================
BOT_NAME=BOT2
BOT_DEBUG=true
AUTO_UPVOTE=true
MAIN_CHAT_ONLY=false
PM_TESTING_MODE=true

# Chat Behavior
RESPOND_IN_MAIN_CHAT=true
RESPOND_IN_PM=true
MAIN_CHAT_SILENT=false

# Command Permissions
COMMANDS_ADMIN_ONLY=false
AI_KEYWORDS_PUBLIC=true
OWNER_PM_ONLY=false

# Keyword Triggers
KEYWORD_TRIGGERS=bot,b0t,bot2,@bot

# ========================================
# Bot Behavior Settings
# ========================================
BOT_PERSONALITY=sassy
ENABLE_PROFANITY=true
RESPONSE_LENGTH_LIMIT=200
ENABLE_CONVERSATION_MEMORY=true
USER_MEMORY_DURATION=86400

# Music Selection
USE_CURATED_ARTISTS=true
LEARN_FROM_USERS=true
SEASONAL_FILTERING=true

# Bot Detection (exclude from learning)
EXCLUDE_BOT_NAMES=bot,bot2,musicbot
EXCLUDE_BOT_USERIDS=

# ========================================
# Advanced Settings
# ========================================
BOOT_GREET=true
BOOT_GREET_MESSAGE=BOT2 Online ðŸŽ§
USER_GREET=true
USER_GREET_MESSAGE=Welcome {name}!

# Research APIs
MUSICBRAINZ_USER_AGENT=DeepcutBot/1.0
WIKIPEDIA_USER_AGENT=DeepcutBot/1.0

