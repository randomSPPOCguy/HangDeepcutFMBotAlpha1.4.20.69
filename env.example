# Hang.fm Bot Configuration
# Copy this file to .env and fill in your values

# ============================================
# HANG.FM SOCKET CONNECTION
# ============================================
TTFM_SOCKET_BASE_URL=https://socket.prod.tt.fm
TTFM_API_TOKEN=your_jwt_token_here
ROOM_UUID=your_room_uuid_here
BOT_NAME=BOT

# ============================================
# COMETCHAT (CHAT MESSAGES)
# ============================================
COMETCHAT_APPID=193427bb5702bab7
COMETCHAT_API_KEY=your_cometchat_api_key
COMETCHAT_REGION=us
COMETCHAT_UID=your_bot_uuid
COMETCHAT_AUTH=your_auth_token

# ============================================
# AI PROVIDERS (Configure at least ONE)
# ============================================
# Google Gemini (Free tier: 60 req/min)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude (Pay-as-you-go)
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI GPT (Pay-as-you-go)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace (Free tier available)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============================================
# MUSIC DISCOVERY SYSTEM
# ============================================
# Discogs API for genre classification
DISCOGS_USER_TOKEN=your_discogs_token_here
DISCOGS_USER_AGENT=HangFmBot/1.0

# Spotify API for track discovery and playback
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Music Selection Configuration
MUSIC_YEAR_START=1950
MUSIC_YEAR_END=2025
RECENTLY_PLAYED_LIMIT=50

# ============================================
# TUNABLES (Optional)
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (verbose logging)
ALLOW_DEBUG=False

# Rate limiting: messages per second
SEND_RATE_PER_SEC=2

# HTTP polling interval in milliseconds
HTTP_POLL_INTERVAL_MS=1000

