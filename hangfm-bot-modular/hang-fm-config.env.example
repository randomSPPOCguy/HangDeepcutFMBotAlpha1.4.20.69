# Hang.fm Modular Bot Configuration Example
# Copy this to hang-fm-config.env (in project root) and fill in your values
# NOTE: The modular bot shares the same config as the original hang.fm bot

# ========================================
# REQUIRED - Bot Authentication
# ========================================
BOT_USER_TOKEN=your_bot_jwt_token_here
COMETCHAT_AUTH=your_cometchat_auth_token_here
COMETCHAT_API_KEY=193427bb5702bab7
USER_ID=your_user_uuid_here
ROOM_ID=your_room_uuid_here

# ========================================
# Bot Settings
# ========================================
BOT_NAME=BOT-MODULAR
DEBUG=true
VERBOSE_MODE=false
BOT_AVATAR=bot-01
CHAT_AVATAR_ID=bot-01
CONTENT_FILTER_ENABLED=true

# Greetings
BOOT_GREET=true
BOOT_GREET_MESSAGE=ðŸ§© BOT-MODULAR Online (Dev)

# ========================================
# AI Providers (Per ChatGPT Spec)
# ========================================
# Provider: openai | gemini | huggingface | auto | off
AI_PROVIDER=off
AI_TEMPERATURE=0.6
AI_MAX_TOKENS=256

# OpenAI
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Gemini
GEMINI_API_KEY=xxx
GEMINI_MODEL=gemini-1.5-flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Hugging Face
HUGGINGFACE_API_KEY=hf_xxx
HUGGINGFACE_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co

# ========================================
# Optional APIs
# ========================================
# OpenWeather (for /weather command)
OPENWEATHER_API_KEY=your_openweather_key_here

# Spotify (for music metadata)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_ENABLED=true

# Discogs (for underground music)
DISCOGS_TOKEN=your_discogs_token_here
DISCOGS_ENABLED=true

# Wikipedia OAuth
WIKIPEDIA_ACCESS_TOKEN=your_wikipedia_token_here

# Research APIs
MUSICBRAINZ_USER_AGENT=HangBotModular/1.0
WIKIPEDIA_USER_AGENT=HangBotModular/1.0

